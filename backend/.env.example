# Configuration du serveur
NODE_ENV=development
PORT=3001

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# Base de données (MongoDB)
MONGODB_URI=mongodb://localhost:27017/sovereign-bonds
MONGODB_URI_TEST=mongodb://localhost:27017/sovereign-bonds-test

# JWT et sécurité
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRE=7d
BCRYPT_ROUNDS=12

# Blockchain Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
PRIVATE_KEY=your-private-key-for-contract-deployment

# Smart Contracts (à remplir après déploiement)
BOND_FACTORY_ADDRESS=
SOVEREIGN_BOND_TOKEN_ADDRESS=

# API Keys externes
COINGECKO_API_KEY=your-coingecko-api-key
CHAINLINK_API_KEY=your-chainlink-api-key

# Email Configuration (Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password
EMAIL_FROM=noreply@sovereignbonds.com

# Storage (Cloudinary pour les documents KYC)
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-key
CLOUDINARY_API_SECRET=your-cloudinary-secret

# Redis (pour le cache et les sessions)
REDIS_URL=redis://localhost:6379

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# KYC/AML Configuration
KYC_PROVIDER_API_KEY=your-kyc-provider-key
KYC_WEBHOOK_SECRET=your-kyc-webhook-secret

# Monitoring et Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id
